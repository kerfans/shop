        //药品数量
        function goods_num(k){
            var num=$(".goods"+k)[1].value;
            var price=$(".goods"+k)[0].innerHTML;
            $(".goods"+k)[3].innerHTML=num*price;
            var count=<?php echo count($goods);?>;
            var sum_p=new Array();
            for(var i=0;i<count;i++){
                sum_p.push($(".goods"+i)[3].innerHTML);
            }
            $("#goods_sum").html(eval(sum_p.join('+')));
            var kuaidi=$("#kuaidifei").val();
            zong=parseInt(eval(sum_p.join('+')))+parseInt(kuaidi);
            $("#zongji").html(zong);
            $("#total").val(zong);
        }
        //快递费变化
